<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EKanbanBHT.Views.MenuView">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior Command="{Binding BackCommand}"></BackButtonBehavior>
    </Shell.BackButtonBehavior>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding EmpNo}"/>
            <Button Text="Part Picking" Command="{Binding PickingCommand}" />
            <Button Text="Upload Data (.dat)" Command="{Binding UploadCommand}" />
            <Button Text="Sync Data (Request)" Command="{Binding SyncCommand}" />
            <Button Text="Delete Old Data (> 1 month)" Command="{Binding DeleteCommand}" />
            <Button Text="Setting" Command="{Binding SettingCommand}" IsVisible="{Binding ShowSetting}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>